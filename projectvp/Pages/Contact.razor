        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            padding: 20px;
            background-color: #123458;
            color: white;
            text-align: center;
            flex-wrap: wrap;
        }

        .logo {
            height: 60px; /* Adjust size as needed */
            width: auto;
        }

        .title {
            font-size: 18px;
            font-weight: 500;
        }


        .map-container {
            width: 100%;
            overflow: hidden;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .info-layout {
            display: flex;
            align-items: center; /* Vertically center */
            justify-content: center; /* Horizontally center */
            gap: 30px;
            padding: 40px;
            background-color: #f9f9f9;
            flex-wrap: wrap;
        }

        .left-info, .right-image-box {
            flex: 1 1 300px; /* Flex-grow, flex-shrink, flex-basis */
            max-width: 500px;
            box-sizing: border-box;
            min-width: 250px; /* Lowered min-width for better responsiveness */
        }

        .left-info {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            gap: 20px;
        }

        .info-box {
            background-color: #0c2d52;
            color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .right-image-box {
            display: flex;
            align-items: center; /* Vertically center image */
            justify-content: center;
        }

            .right-image-box img {
                width: 100%; /* Fill width of container */
                height: auto; /* Maintain aspect ratio */
                max-width: 100%;
                border-radius: 12px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
                object-fit: cover;
            }

        /* Responsive: stack vertically on smaller screens */
        @@media (max-width: 768px) {
            .info-layout

        {
            flex-direction: column;
            align-items: center;
        }

        .left-info, .right-image-box {
            max-width: 90%; /* Take most of the width */
            min-width: auto;
        }

        .right-image-box {
            margin-top: 20px;
        }

        }

        .stats-wrapper {
            background-color: #f1efec;
            padding: 40px 5%;
        }

        .stats-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 30px;
        }

        .stat-box {
            flex: 1 1 calc(25% - 30px); /* 4 in a row with gap */
            aspect-ratio: 1 / 1;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            transition: transform 0.2s ease;
        }

            .stat-box:hover {
                transform: scale(1.05);
            }

            .stat-box img {
                max-width: 85%;
                max-height: 85%;
                object-fit: contain;
            }


    </style>
</head>
