@page "/Complaint"
@code {
    private string complaintText = string.Empty;
    private string message;

    private void SubmitComplaint()
    {
        if (!string.IsNullOrWhiteSpace(complaintText))
        {
            message = "Complaint registered";
            complaintText = string.Empty; // Clear textarea after submit
        }
        else
        {
            message = "Please enter your complaint.";
        }
    }
    // Your code logic if any
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PAF Complex</title>
    <link rel="stylesheet" href="stylesheet.css" />
    <style>
        /* Radio buttons styling */
        input[type="radio"] {
            accent-color: white; /* This controls the fill circle color */
            background-color: #123458; /* Outer circle color */
            border: 2px solid white;
            width: 20px;
            height: 20px;
            border-radius: 50%; /* This rounds the corners */
            cursor: pointer;
        }

        /* Label styling for dark radio inputs */
        .custom-label {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #123458;
            color: white;
            padding: 14px 20px;
            margin-bottom: 12px;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
            cursor: pointer;
        }

            .custom-label:last-of-type {
                margin-bottom: 25px;
            }

        /* Submit button */
        .submit-btn {
            width: 30%;
            background-color: #123458;
            display: block;
            margin: 0 auto;
            padding: 14px;
            border: none;
            border-radius: 30px;
            font-weight: bold;
            font-size: 1rem;
            color: white;
            cursor: pointer;
        }

        /* Container */
        .form-container {
            width: 80%;
            margin: 40px auto 60px auto;
            padding: 0 15px;
        }

        /* Section box for form */
        .form-section-box {
            background-color: #F1EFEC;
            padding: 30px;
            border-radius: 12px;
        }

        /* Headings */
        h5.section-title {
            color: #123458;
            font-weight: bold;
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        h5.section-subtitle {
            font-size: 0.95rem;
            margin-bottom: 10px;
            color: #123458;
            font-weight: bold;
          
        }

        /* Textarea */
        textarea {
            width: 100%;
            background-color: white;
            border: none;
            padding: 15px;
            resize: none;
            border-radius: 10px;
            box-sizing: border-box;
            margin-bottom: 25px;
            font-family: inherit;
            font-size: 1rem;
        }

        /* Intro PAF Complex box */
        .intro-box {
            background-color: #D4C9BE;
            padding: 20px;
            display: inline-block;
            border-radius: 10px;
        }

            .intro-box span {
                font-weight: bold;
                font-size: 1.8rem;
                color: black;
            }
    </style>
</head>
<body style="background-color: white">

    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <img src="images/logo.png" alt="Logo" class="logo-img" />
            <div class="logo-text">
                <span class="paf">PAF</span><br />
                <span class="complex">Complex</span>
            </div>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="Services">Services</a></li>
            <li><a href="Appointment">Appointments</a></li>
            <li><a href="Complaint">Complaints</a></li>
            <li><a href="Contact">About Us</a></li>
        </ul>
        <a href="/Signup" class="signup-btn">Sign Up</a>
    </nav>

    <!-- Intro Section -->
    <div style="background-color: #123458; color: white; padding: 20px 15px; text-align: center;">
        <img src="images/logo.png" alt="PAF Complex Logo" class="logo-img" style="max-width: 80px; margin-bottom: 10px;" />
        <div>
            <span style="font-weight: bold; font-size: 1.5rem;">PAF Complex</span>
        </div>
        <p style="font-style: italic; margin-top: 8px; max-width: 600px; margin: 8px auto 0 auto; font-size: 0.95rem;">
            <b>We value your Feedback. Submit your Concerns or Complaints here to ensure a environment.</b>
        </p>
    </div>



    <!-- Complaint Form -->
    <div class="form-container">
        <div class="form-section-box">
            <h5 class="section-title">Tell Us about yourself</h5>

            <label class="custom-label">
                <em>Outpatient</em>
                <input type="radio" name="userType" value="outpatient" />
            </label>

            <label class="custom-label">
                <em>Inpatient</em>
                <input type="radio" name="userType" value="inpatient" checked />
            </label>

            <label class="custom-label">
                <em>Visitor</em>
                <input type="radio" name="userType" value="visitor" />
            </label>

            <h5 class="section-title">Complaint About</h5>

            <label class="custom-label">
                <em>Hospital Environment</em>
                <input type="radio" name="complaintType" value="environment" />
            </label>

            <label class="custom-label">
                <em>Hospital Staff</em>
                <input type="radio" name="complaintType" value="staff" checked />
            </label>

            <label class="custom-label">
                <em>Management</em>
                <input type="radio" name="complaintType" value="management" />
            </label>

            <h5 class="section-subtitle">Type your Complaint Here</h5>
            <textarea rows="6" placeholder="Write your complaint here..."></textarea>

            <button class="submit-btn" @onclick="SubmitComplaint">Submit</button>

        @if (!string.IsNullOrEmpty(message))
        {
            <p style="text-align:center; color:green; margin-top:10px;">Your Complaint has been Registered</p>
        }

        </div>
    </div>

    <!-- Footer -->
    <footer style="background-color: #123458; color: white; padding: 40px 20px; display: flex; justify-content: space-between; flex-wrap: wrap;">
        <div style="flex: 1; min-width: 200px; display: flex; align-items: center;">
            <img src="images/logo2.png" alt="Logo" style="width: 40px; height: auto; margin-right: 2px;" />
            <div>
                <span style="font-size: 20px; font-weight: bold;">PAF</span>
                <span style="font-size: 16px;">Complex</span>
            </div>
        </div>
        <div style="flex: 1; min-width: 200px;">
            <h5>QUICK LINKS</h5>
            <ul style="list-style: none; padding: 0;">
                <li><a href="Services" style="color: white; text-decoration: none;">Services</a></li>
                <li><a href="Appointment" style="color: white; text-decoration: none;">Appointment</a></li>
                <li><a href="Complaint" style="color: white; text-decoration: none;">Complaints</a></li>
                <li><a href="Contact" style="color: white; text-decoration: none;">About Us</a></li>
            </ul>
        </div>
        <div style="flex: 1; min-width: 200px;">
            <h5>CONTACT US THROUGH</h5>
            <div style="display: flex; gap: 10px;">
                <a href="https://web.facebook.com/PAF.Hospital.Islamabad/?_rdc=1&_rdr#"><img src="images/fb.png" alt="Facebook" style="width: 35px;" /></a>
                <a href="https://www.instagram.com/pafhospital/"><img src="images/insta.png" alt="Instagram" style="width: 35px;" /></a>
                <a href="#"><img src="images/twitter.png" alt="Twitter" style="width: 35px;" /></a>
            </div>
        </div>
    </footer>
</body>
</html>
